#include <stdio.h>

int main() {
    int digit1, digit2, sum;
    
    // Input the first digit
    printf("Enter the first digit: ");
    scanf("%d", &digit1);
    
    // Input the second digit
    printf("Enter the second digit: ");
    scanf("%d", &digit2);
    
    // Calculate the sum of the two digits
    sum = digit1 + digit2;
    
    // Output the result
    printf("The sum of %d and %d is %d.\n", digit1, digit2, sum);
    
    return 0;
}
